<head>

    <link rel="stylesheet" type="text/css" href="/assets/css/burger_style.css">
</head>
 <div class="container">
     <div class="row">
         <div class="col-md-12">
    <img src="assets/img/burger.jpg" alt="burger" style="width:250x;height:250px;">
  </div>
    </div>
    <h1>Burger List</h1>
    <br>
    <body>
        <div class="bod">
   
        <div class="row">
            <div class="col-md-2 offset-md-2"></div>
            <div id="col-md-4">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li style="text-align: left;">
                        {{name}}
                        <button class="devour" data-id="{{this.id}}">DEVOUR!</button>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
    
  
            <div class="col-md-4">
                <div class="eaten">

               
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <li style="text-align: left;">
                        {{name}} has been devoured.
                        {{/if}}
                        {{/each}}
                </ul>
                 </div>
            </div>
            </div>
        </div>
</div>
<br>
<h2>Burger Wish List!</h2>
<form class="create-form">

    <div class="form-group">
        <label for="berg">Burger Name:</label>
        <input type="text" id="berg" name="name">
    </div>
</div>

    <button class="bergs" type="submit">Add Burger</button>
</form>
</body>
